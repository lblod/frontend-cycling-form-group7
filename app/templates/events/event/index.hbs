<div class="au-c-body-container au-c-body-container--scroll">
  <div class="au-o-box au-o-flow au-o-flow--large">

    <AuCard @standOut="true" as |card|>
      <card.header>
        <AuHeading @level="2" @skin="4">
          {{this.model.name}}
        </AuHeading>
      </card.header>
      <card.content>
        {{this.model.date}}
      </card.content>
    </AuCard>
  </div>
</div>